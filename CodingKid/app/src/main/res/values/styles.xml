<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDonJuan</item>
        <item name="colorPrimaryDark">@color/colorDonJuan</item>
        <item name="colorAccent">@color/colorKeppel</item>
    </style>

    <style name="ControlPanelsButtonsWithText">
        <item name="android:layout_marginRight">@dimen/activity_game_control_panel_buttons_padding
        </item>
        <item name="android:layout_marginLeft">@dimen/activity_game_control_panel_buttons_padding
        </item>
    </style>

    <style name="LoopButton">
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="MainActivityButtonText">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="MainActivityButtonImage">
        <item name="android:gravity">end</item>
    </style>

    <style name="MainActivityButtonBg">
        <item name="android:background">@drawable/button_current</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MainActivityLabel">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="GameActivityInfoLabels">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textSize">@dimen/activity_game_info_panel_text_size</item>
    </style>

    <style name="GameActivityInfoNumbers" parent="GameActivityInfoLabels">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingsActivityRadioButtonText" parent="TextAppearance.AppCompat.Large"></style>

    <style name="SettingsActivityText" parent="TextAppearance.AppCompat.Medium"></style>

    <style name="SettingsActivityId" parent="SettingsActivityText">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/activity_settings_left_padding_from_id</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="EditorActivityInputPanelText" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/activity_editor_input_text_size</item>
    </style>
</resources>
