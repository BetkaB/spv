<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="7"
    tools:context="com.example.beebzb.codingkid.screens.main.SharedLevelsFragment">

    <TextView
        style="@style/MainActivityLabel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/main_activity_shared_levels_title" />

    <ListView
        android:id="@+id/shared_levels_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@drawable/bg_level_picker_fragment" />

</LinearLayout>