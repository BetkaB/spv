<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="7"
    tools:context="com.example.beebzb.codingkid.screens.main.CustomLevelChoiceFragment">

    <TextView
        style="@style/MainActivityLabel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/main_activity_custom_levels_title" />

    <ListView
        android:id="@+id/custom_levels_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@drawable/bg_level_picker_fragment" />

    <LinearLayout
        android:id="@+id/add_new_level_button"
        style="@style/MainActivityButtonBg"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MainActivityButtonImage"
            android:src="@drawable/ic_add_black_24dp" />

        <TextView
            style="@style/MainActivityButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_activity_add_level" />

    </LinearLayout>

</LinearLayout>